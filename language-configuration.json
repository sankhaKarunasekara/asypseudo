{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["(", ")"],
    ],
    "autoClosingPairs": [
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "(", "close": ")" },
    ],
    "surroundingPairs": [
        { "open": "\"", "close": "\"" },
        { "open": "(", "close": ")" },
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#region\\b",
            "end": "^\\s*//\\s*#endregion\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^.*\\b(If|For|While|Do|Else|ElseIf|Function|Criteria|Action)\\b.*$",
        "decreaseIndentPattern": "^\\s*\\b(Endif|End|EndFor|EndFunction|EndCriteria|EndAction|Else|ElseIf)\\b.*$"
    }
}